@model Orders

@{
    ViewBag.Title = "Order Details";
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card mt-5">
                            <div class="card-header border-0">
                                <div class="card-header border-0 d-flex justify-content-between align-items-center">
                                    <div>
                                        <h2>Order ID: @Model.OrderId</h2>
                                        <p class="lead mb-5">
                                            <strong>Status</strong>: @Model.Status <br>
                                        <strong>Order Date</strong>: @Model.OrderDate?.ToString("yyyy-MM-dd") <br>

                                        <strong>Employee</strong>: @Model.Employees?.FirstName
                                        <strong>Customer</strong>: @Model.Customers?.Name

                                        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i>  Back to list</a>
                                    </div>
                                    @if (ViewBag.isEdit)
                                    {
                                        <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-primary"><i class="bi bi-pencil-square"></i>  Edit</a>
                                    }
                                    @if (ViewBag.isDelete)
                                    {
                                        <div class="text-center">
                                            <p>Are you sure you want to delete this order?</p>
                                            <a asp-action="Delete" asp-route-id="@Model.OrderId" class="btn btn-danger"><i class="bi bi-trash-fill"></i>  Delete</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>