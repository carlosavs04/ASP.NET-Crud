@model IEnumerable<AppWebs.Models.Employees>

@{
    ViewBag.Title = "Employees";
    var message = TempData["Message"] as string;
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
               <div class="row">
                  <div class="col-lg-12">
                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert alert-success alert-dismissible mt-5">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                @message
                            </div>
                        }

                        <div class="mt-3 text-right">
                            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill"></i>&nbsp; Add New Employee</a>
                        </div>
                     <div class="card mt-2">
                            <div class="card-header border-0">
                                <h3 class="card-title">Employees</h3>
                            </div>
                            <div class="card-body table-responsive p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                        <tr>
                                            <th style="width:180px; min-width:170px;">Employee ID</th>
                                            <th style="width:220px; min-width:210px;">Name</th>
                                            <th style="width:220px; min-width:210px;">Email</th>
                                            <th style="width:180px; min-width:170px;">Hire Date</th>
                                            <th style="width:200px; min-width:190px;">Job Title</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr onclick="location.href='@Url.Action("Details", "Employee", new { id = item.EmployeeId })'">
                                                 <td>
                                                     @item.EmployeeId
                                                 </td>
                                                 <td>
                                                     @item.FirstName @item.LastName
                                                 </td>
                                                 <td>
                                                     @item.Email
                                                 </td>
                                                 <td>
                                                     @item.HireDate.ToString("yyyy-MM-dd")
                                                 </td>
                                                 <td>
                                                     @item.JobTitle
                                                 </td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@item.EmployeeId" asp-route-isEdit="true" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                                                    <a asp-action="Details" asp-route-id="@item.EmployeeId" asp-route-isDelete="true" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                                </td>
                                             </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                     </div>
                  </div>
               </div>
            </div>
        </div>
    </div>
</div>