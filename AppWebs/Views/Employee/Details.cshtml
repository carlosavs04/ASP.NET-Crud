@model Employees
@{
    ViewBag.Title = "Employee Details";
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card mt-5">
                            <div class="card-header border-0">
                                <div class="card-header border-0 d-flex justify-content-between align-items-center">
                                    <div>
                                        <h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
                                        <p class="lead mb-5">
                                            <strong>Email</strong>: @Html.DisplayFor(model => model.Email) <br>
                                            <strong>Phone</strong>: @Html.DisplayFor(model => model.Phone) <br>
                                            <strong>Hire Date</strong>: @Html.DisplayFor(model => model.HireDate, "{0:yyyy-MM-dd}") <br>
                                            <strong>Job Title</strong>: @Html.DisplayFor(model => model.JobTitle)
                                        </p>
                                        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i>  Back to list</a>
                                    </div>
                                    @if (ViewBag.isEdit)
                                    {
                                        <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary"><i class="bi bi-pencil-square"></i>  Edit</a>
                                    }
                                    @if (ViewBag.isDelete)
                                    {
                                        <div class="text-center">
                                            <p>Are you sure you want to delete this record?</p>
                                            <a asp-action="Delete" asp-route-id="@Model.EmployeeId" class="btn btn-danger"><i class="bi bi-trash-fill"></i>  Delete</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
