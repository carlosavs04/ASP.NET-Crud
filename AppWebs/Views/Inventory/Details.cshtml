@model Inventories
@{
    ViewBag.Title = "Inventory Details";
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card mt-5">
                            <div class="card-header border-0">
                                <div class="card-header border-0 d-flex justify-content-between align-items-center">
                                    <div>
                                        <h2>Inventory</h2>
                                        <p class="lead mb-5">
                                            <strong>Product</strong>: @(Model.Products != null ? Model.Products.ProductName : "Empty") <br>
                                            <strong>Warehouse</strong>: @(Model.Warehouses != null ? Model.Warehouses.WarehouseName : "Empty")<br>
                                            <strong>Quantity</strong>: @Html.DisplayFor(model => model.Quantity)<br>
                                        </p>
                                        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i>&nbsp; Back to list</a>
                                    </div>
                                    @if (ViewBag.isDelete)
                                    {
                                        <div class="text-center">
                                            <p>Are you sure you want to delete this record?</p>
                                            <a asp-action="DeleteInventory" asp-route-productId="@Model.ProductId" asp-route-warehouseId="@Model.WarehouseId" class="btn btn-danger"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>