@model IEnumerable<Inventories>

@{
    ViewBag.Title = "Inventories";
    var message = TempData["Message"] as string;
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert alert-success alert-dismissible mt-5">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                @message
                            </div>
                        }
                        <div class="mt-3 text-right">
                            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill"></i>&nbsp; Add/Update Inventory</a>
                        </div>
                        <div class="card mt-2">
                            <div class="card-header border-0">
                                <h3 class="card-title">Inventories</h3>
                            </div>
                            <div class="card-body table-responsive p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                        <tr>
                                            <th style="width:40%; min-width:130px;">Product</th>
                                            <th style="width:40%; min-width:130px;">Warehouse</th>
                                            <th style="width:20%">Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Products.ProductName
                                                </td>
                                                <td>
                                                    @item.Warehouses.WarehouseName
                                                </td>
                                                <td>
                                                    @item.Quantity
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
