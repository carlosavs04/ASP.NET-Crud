@model Warehouses
@{
    ViewBag.Title = "Edit Warehouse";
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mt-3 text-right">
                            <a asp-action="Details" asp-route-id="@Model.WarehouseId" asp-route-isEdit="true" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i>&nbsp; Back to details</a>
                        </div>
                        <div class="card mt-5">
                            <div class="card-header border-0">
                                <div class="card-header border-0 d-flex justify-content-center align-items-center">
                                    <div class="col-10">
                                        <form asp-action="Edit">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label for="WarehouseName">Warehouse Name</label>
                                                <input asp-for="WarehouseName" type="text" class="form-control" />
                                                <span asp-validation-for="WarehouseName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label for="LocationId">Location</label>
                                                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.Locations"></select>
                                                <span asp-validation-for="LocationId" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-success" value="Update warehouse">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>