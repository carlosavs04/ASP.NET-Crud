@model IEnumerable<Warehouses>

@{
    ViewBag.Title = "Warehouses";
    var message = TempData["Message"] as string;
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert alert-success alert-dismissible mt-5">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                @message
                            </div>
                        }

                        <div class="mt-3 text-right">
                            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle-fill"></i>&nbsp; Add New Warehouse</a>
                        </div>
                        <div class="card mt-2">
                            <div class="card-header border-0">
                                <h3 class="card-title">Warehouses</h3>
                            </div>
                            <div class="card-body table-responsive p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                        <tr>
                                            <th style="width:40%; min-width:130px;">Warehouse Name</th>
                                            <th style="width:40%; min-width:130px;">Location </th>
                                            <th style="width:20%">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr onclick="location.href='@Url.Action("Details", "Warehouses", new { id = item.WarehouseId })'">
                                                <td>
                                                    @item.WarehouseName
                                                </td>
                                                <td>
                                                    @(item.Locations != null ? item.Locations.City : "Empty")
                                                </td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@item.WarehouseId" asp-route-isEdit="true" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                                                    <a asp-action="Details" asp-route-id="@item.WarehouseId" asp-route-isDelete="true" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
