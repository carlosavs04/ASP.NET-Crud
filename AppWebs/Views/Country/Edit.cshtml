@model Countries
@{
    ViewBag.Title = "Edit Country";
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mt-3 text-right">
                            <a asp-action="Details" asp-route-id="@Model.CountryId" asp-route-isEdit="true" class="btn btn-primary"><i class="bi bi-arrow-return-left"></i>&nbsp; Back to details</a>
                        </div>
                        <div class="card mt-2">
                            <div class="card-header border-0">
                                <div class="card-header border-0 d-flex justify-content-center align-items-center">
                                    <div class="col-10">
                                        <form asp-action="Edit">
                                            <input type="hidden" asp-for="CountryId" />
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label for="Name">Name</label>
                                                <input asp-for="CountryName" type="text" class="form-control" />
                                                <span asp-validation-for="CountryName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label for="RegionId">Region</label>
                                                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.Regions"></select>
                                                <span asp-validation-for="RegionId" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-primary" value="Edit country">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>