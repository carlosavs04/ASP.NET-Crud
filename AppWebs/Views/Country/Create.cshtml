@model Countries
@{
    ViewBag.Title = "Create Country";
}

<div class="wrapper">
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card mt-5">
                            <div class="card-header border-0">
                                <div class="card-header border-0 d-flex justify-content-center align-items-center">
                                    <div class="col-10">
                                        <form asp-action="Create">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label for="CountryId">Country Id</label>
                                                <input asp-for="CountryId" type="text" class="form-control" />
                                                <span asp-validation-for="CountryId" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label for="Name">Name</label>
                                                <input asp-for="CountryName" type="text" class="form-control" />
                                                <span asp-validation-for="CountryName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label for="RegionId">Region</label>
                                                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.Regions"></select>
                                                <span asp-validation-for="RegionId" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-success" value="Add country">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>